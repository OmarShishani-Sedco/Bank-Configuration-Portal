@{
    ViewBag.Title = "Application Error";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>
<body class="d-flex align-items-center justify-content-center vh-100">
    <div class="container text-center">
        <div class="card shadow p-4 mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h1 class="card-title text-danger mb-3">Application Error</h1>
                <p class="card-text text-muted">
                    An unexpected error has occurred. This could be due to a server-side issue or a configuration problem.
                </p>

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger text-start mt-4" role="alert">
                        <h4 class="alert-heading">Error Details:</h4>
                        <p class="mb-0">
                            @ViewBag.ErrorMessage
                        </p>
                    </div>
                }

                <a href="@Url.Action("Index", "Login")" class="btn btn-primary mt-4">
                    Go to Login
                </a>
                <p class="text-muted mt-3 mb-0">
                    If the problem persists, please contact your system administrator.
                </p>
            </div>
        </div>
    </div>
</body>
</html>