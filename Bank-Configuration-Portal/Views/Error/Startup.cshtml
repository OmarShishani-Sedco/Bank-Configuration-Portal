@{
    ViewBag.Title = "Application Startup Error";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>
<body class="d-flex align-items-center justify-content-center vh-100">
    <div class="container text-center">
        <div class="card shadow p-4 mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h1 class="card-title text-danger mb-3">@ViewBag.Title</h1>
                <p class="card-text text-muted">
                    There was a critical error preventing the application from starting. This is most often caused by a problem with the database connection string, a missing configuration, or an issue with the application's core dependencies.
                </p>

                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger text-start mt-4" role="alert">
                        <h4 class="alert-heading">Error Details:</h4>
                        <p class="mb-0">
                            @ViewBag.ErrorMessage
                        </p>
                    </div>
                }

            <p class="text-muted mt-4 mb-0">
                To fix this problem, you will need to correct the configuration and <b>manually restart the application</b>. If the problem persists, please contact your system administrator.
            </p>
            </div>
        </div>
    </div>
</body>
</html>