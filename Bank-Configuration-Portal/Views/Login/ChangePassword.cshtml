@model Bank_Configuration_Portal.Models.ChangePasswordViewModel
@using Bank_Configuration_Portal.Resources
@{
    ViewBag.Title = Language.ChangePassword_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm" style="max-width: 500px; width: 100%;">
        <div class="card-header text-center bg-warning text-white">
            <h3 class="mb-0">@Language.ChangePassword_Title</h3>
        </div>
        <div class="card-body p-4">

            @Html.AlertsFromTempData()

            @using (Html.BeginFormAntiForgery("ChangePassword", "Login", FormMethod.Post))
            {
                <div id="validationSummary" class="mb-3">
                    @Html.ValidationSummaryBlock()
                </div>

                @Html.InputGroupPasswordFor(m => m.OldPassword,
                         iconClass: "bi bi-lock",
                         placeholder: Language.ChangePassword_Old_Placeholder,
                         maxlength: 100,
                         htmlAttributes: new { autocomplete = "current-password" })

                @Html.InputGroupPasswordFor(m => m.NewPassword,
                         iconClass: "bi bi-shield-lock",
                         placeholder: Language.ChangePassword_New_Placeholder,
                         maxlength: 100,
                         htmlAttributes: new { autocomplete = "new-password" })

                @Html.InputGroupPasswordFor(m => m.ConfirmPassword,
                         iconClass: "bi bi-shield-lock",
                         placeholder: Language.ChangePassword_Confirm_Placeholder,
                         maxlength: 100,
                         htmlAttributes: new { autocomplete = "new-password" })

                <div class="d-grid gap-2 mt-4">
                    @Html.PrimaryButton(Language.ChangePassword_Button)
                </div>
            }
        </div>
    </div>
</div>
