@model Bank_Configuration_Portal.Models.LoginViewModel
@using Bank_Configuration_Portal.Resources

@{
    ViewBag.Title = Language.Login_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center form-container">
    <div class="card shadow-sm responsive-card">
        <div class="card-header text-center bg-primary text-white">
            <h3 class="mb-0">@Language.Login_Title</h3>
        </div>
        <div class="card-body p-4">

            @Html.AlertsFromTempData()

            @using (Html.BeginFormAntiForgery("Index", "Login", FormMethod.Post))
            {
                <div id="validationSummary">@Html.ValidationSummaryBlock()</div>

                @Html.InputGroupTextFor(m => m.BankName, "bi bi-bank", Language.Login_BankName_Placeholder, 100)
                @Html.InputGroupTextFor(m => m.UserName, "bi bi-person", Language.Login_UserName_Placeholder, 100)
                @Html.InputGroupPasswordFor(m => m.Password, "bi bi-lock", Language.Login_Password_Placeholder, 100)

                <div class="d-grid gap-2 mt-4">
                    @Html.PrimaryButton(Language.Login_Button)
                </div>
            }
        </div>
    </div>
</div>
