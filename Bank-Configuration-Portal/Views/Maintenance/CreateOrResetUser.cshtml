@model Bank_Configuration_Portal.Models.MaintenanceViewModel
@using Bank_Configuration_Portal.Resources

@{
    ViewBag.Title = Language.Maint_CreateReset_Title ?? "Create / Reset User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center form-container">
    <div class="card shadow-sm responsive-card" >
        <div class="card-header text-center bg-secondary text-white">
            <h3 class="mb-0">@ViewBag.Title</h3>
        </div>
        <div class="card-body p-4">

            @using (Html.BeginFormAntiForgery("CreateOrResetUser", "Maintenance", FormMethod.Post, new { @class = "form" }))
            {
                @Html.HiddenFor(m => m.Secret)

                <div id="validationSummary" class="mb-3">
                    @Html.ValidationSummaryBlock(excludePropertyErrors: false)
                </div>

                @Html.InputGroupTextFor(m => m.UserName,
                         iconClass: "bi bi-person-plus",
                         maxlength: 100)

                @Html.InputGroupNumberFor(m => m.BankId,
                         iconClass: "bi bi-bank",
                         htmlAttributes: new { type = "number", min = "1" })

                <div class="d-grid gap-2 mt-4">
                    @Html.SecondaryButton(Language.Maint_CreateReset_Button)
                </div>
            }

            @if (ViewBag.GeneratedPassword != null)
            {
                <hr />
                <div class="alert alert-success mt-3">
                    <strong>@(ViewBag.Created == true ? Language.Maint_Result_Created : Language.Maint_Result_Reset)</strong>
                    <div>@Language.Maint_Result_User: <code>@ViewBag.UserName</code></div>
                    <div>@Language.Maint_Result_Bank: <code>@ViewBag.BankId</code></div>
                    <div>@Language.Maint_Result_Password: <code>@ViewBag.GeneratedPassword</code></div>
                    <small>@Language.Maint_Result_Note</small>
                </div>
            }
        </div>
    </div>
</div>
