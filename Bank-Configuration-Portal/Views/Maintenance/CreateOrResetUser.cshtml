@model Bank_Configuration_Portal.Models.MaintenanceViewModel
@using Bank_Configuration_Portal.Resources

@{
    ViewBag.Title = Language.Maint_CreateReset_Title ?? "Create / Reset User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-sm" style="max-width: 450px; width: 100%;">
        <div class="card-header text-center bg-secondary text-white">
            <h3 class="mb-0">@ViewBag.Title</h3>
        </div>
        <div class="card-body p-4">
            @using (Html.BeginForm("CreateOrResetUser", "Maintenance", FormMethod.Post, new { @class = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Secret)

                <div id="validationSummary" class="text-danger mb-3">
                    @Html.ValidationSummary(false)
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person-plus"></i></span>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", maxlength = "100" })
                    </div>
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.BankId, new { @class = "form-label" })
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-bank"></i></span>
                        @Html.TextBoxFor(m => m.BankId, new { @class = "form-control", type = "number", min = "1" })
                    </div>
                    @Html.ValidationMessageFor(m => m.BankId, "", new { @class = "text-danger" })
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-secondary">@Language.Maint_CreateReset_Button</button>
                </div>
            }

            @if (ViewBag.GeneratedPassword != null)
            {
                <hr />
                <div class="alert alert-success mt-3">
                    <strong>@(ViewBag.Created == true ? Language.Maint_Result_Created : Language.Maint_Result_Reset)</strong>
                    <div>@Language.Maint_Result_User: <code>@ViewBag.UserName</code></div>
                    <div>@Language.Maint_Result_Bank: <code>@ViewBag.BankId</code></div>
                    <div>@Language.Maint_Result_Password: <code>@ViewBag.GeneratedPassword</code></div>
                    <small>@Language.Maint_Result_Note</small>
                </div>
            }
        </div>
    </div>
</div>
