@using System.Threading
@using System.Globalization
@using System.Security.Claims
@using Bank_Configuration_Portal.Resources
@using Bank_Configuration_Portal.Models

@{
    var baseModel = ViewBag.BaseViewModel as BaseViewModel;

    // Handle bank name localization
    var currentCulture = Thread.CurrentThread.CurrentUICulture;
    var key = "Bank_" + baseModel.bankName;
    baseModel.LocalizedBankName = string.IsNullOrWhiteSpace(baseModel.bankName)
        ? null
        : (Language.ResourceManager.GetString(key, currentCulture) ?? baseModel.bankName);

    baseModel.ShowBankInfo = !string.IsNullOrWhiteSpace(baseModel.LocalizedBankName);
}

<!DOCTYPE html>
<html data-bs-theme="dark" dir="@(Thread.CurrentThread.CurrentUICulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")"
      lang="@Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="Tab_Logo" sizes="180x180" href="~/Content/Images/Tab_Logo">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/Images/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/Images/favicon-16x16.png">
    <title>@ViewBag.Title</title>
    @if (Thread.CurrentThread.CurrentUICulture.TextInfo.IsRightToLeft)
    {
        <link rel="stylesheet" href="~/Content/Site.css" />
        <link rel="stylesheet" href="~/Content/bootstrap.rtl.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="~/Content/Site.css" />
        <link rel="stylesheet" href="~/Content/bootstrap.css" />
    }    
    <link rel="stylesheet" href="~/Content/font/bootstrap-icons.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg glass-bg">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" href="@baseModel.TargetUrl">
                @Html.Image(Url.Content("/Content/Images/Application_Icon.png"), Language.Application_Label, "me-2 rounded-5", new { height = "30" })
                @Language.Application_Label
                <span class="text-truncate app-title" title="@baseModel.LocalizedBankName">

                    @if (baseModel.ShowBankInfo)
                    {
                        @($" - {baseModel.LocalizedBankName}")
                    }
                </span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                    @if (baseModel.IsLoggedIn && !baseModel.MustChangePassword)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Branch")">@Language.Branch_Index_Title</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Service")">@Language.Service_Index_Title</a>
                        </li>
                    }


                </ul>

                @using (Html.BeginForm("ChangeLanguage", "Base", FormMethod.Get, new { @class = "d-flex me-3" }))
                {
                    <select data-bs-theme="dark" name="lang" onchange="this.form.submit();" class="form-select">
                        <option value="en" @(Thread.CurrentThread.CurrentUICulture.Name.StartsWith("en") ? "selected" : "")>English</option>
                        <option value="ar" @(Thread.CurrentThread.CurrentUICulture.Name.StartsWith("ar") ? "selected" : "")>العربية</option>
                    </select>
                    <input type="hidden" name="returnUrl" value="@Context.Request.RawUrl" />
                }

                @if (baseModel.IsLoggedIn)
                {
                    if (baseModel.MustChangePassword)
                    {
                        <div class="d-flex flex-column align-items-end me-3">
                            <a href="@Url.Action("ChangePassword", "Login")" class="btn btn-warning btn-sm fw-bold" title=" @Language.ChangePassword_Required_Note">
                                <i class="bi bi-key me-1"></i> @Language.ChangePassword_Title
                            </a>
                        </div>
                    }
                    <ul class="navbar-nav d-flex align-items-center">
                        @if (!string.IsNullOrEmpty(baseModel.UserName))
                        {
                            <li class="nav-item me-3">
                                <span class="navbar-text d-flex align-items-center text-white text-truncate user-title" title="@baseModel.UserName">
                                    <i class="bi bi-person-circle me-2"></i>
                                    @baseModel.UserName
                                </span>
                            </li>
                        }
                        <li class="nav-item">
                            <button type="button" class="btn btn-outline-danger btn-sm nav-link px-3" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                @Language.Logout
                            </button>
                        </li>
                    </ul>
                }

            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
    </div>

    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">@Language.Logout_Confirm_Title</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @Language.Logout_Confirm_Message
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Language.Cancel_Button</button>
                    @using (Html.BeginForm("Logout", "Login", FormMethod.Post, new { @class = "d-inline" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">@Language.Logout</button>
                    }
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Custom")
    @RenderSection("scripts", required: false)
</body>
</html>