@model Bank_Configuration_Portal.Models.ServiceListViewModel
@using Bank_Configuration_Portal.Resources

@{
    ViewBag.Title = Language.Service_Index_Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var lang = System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName;
}

<div class="container py-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success fadeout3s">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger fadeout3s">@TempData["Error"]</div>
    }
    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info fadeout3s">@TempData["Info"]</div>
    }

    <div class="glass-card p-4 mb-4 d-flex justify-content-between align-items-center shadow-sm">
        <h2 class="mb-0">@Language.Service_Index_Title</h2>
        @Html.ActionLink(Language.Service_Create_Button, "Create", "Service", null, new { @class = "btn btn-primary" })
    </div>

    @if (!Model.Services.Any())
    {
        <div class="text-muted text-center">@Language.NoRecordsFound</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var service in Model.Services)
            {
                <div class="col">
                    <div class="card glass-card h-100 shadow-sm">
                        <div class="card-body">
                            @if (lang == "ar")
                            {
                                <h5 class="card-title">@service.NameArabic</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@service.NameEnglish</h6>
                            }
                            else
                            {
                                <h5 class="card-title">@service.NameEnglish</h5>
                                <h6 class="card-subtitle mb-2 text-muted">@service.NameArabic</h6>
                            }

                            <p class="mt-2">
                                <strong>@Language.MaxTickets_Label:</strong> @service.MaxTicketsPerDay
                            </p>

                            <p>
                                <strong>@Language.IsActive_Label:</strong>
                                @if (service.IsActive)
                                {
                                    <span class="badge bg-success">@Language.Active_Label</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@Language.Inactive_Label</span>
                                }
                            </p>

                            <div class="d-flex justify-content-between mt-3">
                                @Html.ActionLink(Language.Edit_Label, "Edit", new { id = service.Id }, new { @class = "btn btn-md btn-warning me-2" })

                                @using (Html.BeginForm("Delete", "Service", FormMethod.Post, new { onsubmit = "return confirm('" + Language.ConfirmDelete_Message + "');", style = "display:inline;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.Hidden("id", service.Id)
                                    @Html.Hidden("rowVersion", service.RowVersion)
                                    <button type="submit" class="btn btn-md btn-danger">@Language.Delete_Label</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (Model.TotalPages > 1)
    {
        @Html.Partial("_Pagination", new Bank_Configuration_Portal.Models.PaginationViewModel
        {
            CurrentPage = Model.CurrentPage,
            TotalPages = Model.TotalPages,
            ActionName = "Index",
            ControllerName = "Service"
        })
    }

</div>
